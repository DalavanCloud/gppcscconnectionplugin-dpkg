#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@ 

override_dh_auto_test:
	:

override_dh_auto_install:
	dh_auto_install
	# gppcsc connection plugin is a plugin per se, but currently
	# clients (e.g. gpshell) hardcode library name and version,
	# so there is no need to have .la and .so files
	rm -f debian/libgppcscconnectionplugin1/usr/lib/libgppcscconnectionplugin.la
	rm -f debian/libgppcscconnectionplugin1/usr/lib/libgppcscconnectionplugin.so
	# don't install empty dir
	rmdir debian/libgppcscconnectionplugin1/usr/include
